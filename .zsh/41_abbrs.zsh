    # system
    e   'export'
    m   'make'
    mc  'make -C'
    mn  'make -n'
    mnc 'make -n -C'
    t   'touch'
    md  'mkdir'

    # git
    g   'git'
    ga  'git add'
    gb  'git branch'
    gc  'git checkout'
    gca 'git commit -ammend,n'
    gcb 'git checkout -b'
    gco 'git commit,n'
    gcp 'git cherry-pick'
    gd  'git diff'
    gf  'git fetch'
    gl  'git log'
    gpl 'git pull'
    gps 'git push'
    grm 'git rm'
    grs 'git reset'
