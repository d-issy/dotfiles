#!/bin/bash

dot_dir=$(readlink -f $(dirname ..))
home_dir=$HOME
targets=(config zshenv)

case $1 in
  install)
    for target in ${targets[@]}; do
      [ ! -e $home_dir/.$target ] && ln -sv $dot_dir/$target $home_dir/.$target
    done
    ;;
  uninstall)
    for target in ${targets[@]}; do
      [ -L $home_dir/.$target ] && unlink $home_dir/.$target
    done
    ;;
  help|*)
    echo bin/dot install or uninstall
    ;;
esac
