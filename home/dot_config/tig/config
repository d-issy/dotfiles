color default white black
color cursor black magenta

set main-view   = date:relative-compact author id commit-title:graph=v2,refs=yes
set blame-view  = author date:relative-compact line-number:interval=1 text
set tree-view   = mode author file-size:units date file-name
set status-view = status file-name
set refs-view   = date:relative-compact author id ref commit-title

set tab-size = 4
set ignore-space = all
set ignore-case = true
set split-view-height = 80%

bind generic g move-first-line
bind generic G move-last-line
bind main    G move-last-line
bind status  C !<git commit
