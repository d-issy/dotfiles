###########
# bindkey #
###########
# vi
bindkey -v
bindkey -M viins '^A' beginning-of-line
bindkey -M viins '^E' end-of-line
bindkey -M viins '^N' down-line-or-history
bindkey -M viins '^P' up-line-or-history
# own
bindkey -M viins '^R' zsh-history

# vi cursor
function zle-keymap-select () {
  case $KEYMAP in
    vicmd) echo -ne '\e[1 q';;
    viins|main) echo -ne '\e[5 q';;
  esac
}
zle -N zle-keymap-select

function zle-line-init() {
  zle -K viins
  echo -ne "\e[5 q"
}
zle -N zle-line-init

echo -ne '\e[5 q'
function preexec() { echo -ne '\e[5 q'; }

##############
# completion #
##############
autoload -U compinit
compinit

autoload colors
zstyle ':completion:*' completer _expand_alias _complete _ignored

zstyle ':completion:*:descriptions' format '%F{blue} %B%d%b%f'
zstyle ':completion:*:warnings' format '%F{yello} No matches for: %d%f'

zstyle ':completion:*' group-name ''
zstyle ':completion:*' matcher-list '' 'm:{a-zA-Z}={A-Za-z}' 'r:|[._-]=* r:|=*' 'l:|=* r:|=*'
zstyle ':completion:*' menu select=2
zstyle ':completion:*' verbose yes

###########
# history #
###########
HISTFILE=$HOME/.zsh_history
HISTSIZE=10000
SAVEHIST=10000

setopt appendhistory
setopt hist_ignore_all_dups
setopt hist_ignore_dups
setopt hist_ignore_space
setopt hist_no_store
setopt hist_reduce_blanks
setopt share_history

########
# path #
########

path=(
  $HOME/bin(N-/)
  $HOME/.local/bin(N-/)
  $ASDF_GOLANG_PACKAGE_BIN(N-/)
  $path
)
typeset -U PATH

fpath=(
  $HOME/.config/zsh/plugins/zsh-completions/src(N-/)
  $HOME/.asdf/completions(N-/)
  $fpath
)
typeset -U FPATH
